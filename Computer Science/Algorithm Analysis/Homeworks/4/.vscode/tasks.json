{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file [Windows]",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "--std=c++20",
                "-Wall",
                "-Wextra",
                "-DDEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file [Linux]",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=gnu++20",
                "-Wall",
                "-Wextra",
                "-DDEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
